        '404':
          description: No se encontró pago con el folio proporcionado.
          content:
            application/json:
              schema:
                type: object
                properties:
                  codigo:
                    type: string
                    example:  404.meli-developer-productos.4404
                    description: Código de error.
                  mensaje:
                    type: string
                    example: No se encontro el producto
                    description: Descripción del error.
                  folio:
                    type: string
                    example: 134adsfka
                    description: Folio de la transacción.
                  info:
                    type: string
                    example: https://meli.com.mx/info#404.meli-developer-productos.4404
                    description: Enlace a información adicional sobre el error.
                  detalle:
                    type: string
                    example: No se encontro el {folio}
                    description: Detalle específico del error 
