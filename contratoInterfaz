    delete:
      summary: Servicio REST para eliminar un producto.
      tags: [Productos]
      parameters:
        - name: name
          in: path
          description: Nombre del producto
          required: true
          schema:
            type: string      
      responses:
        '200':
          description: Consulta de estatus exitosa.
          content:
            application/json:
              schema:
                type: object
                properties:
                  mensaje:
                    type: string
                    example: Operación exitosa
                    description: Mensaje de éxito.
                  folio:
                    type: string
                    example: 69e31a99505a
                    description: Folio único de la transacción.
                  resultado:
                    type: object
                    properties:
                      mensaje:
                        type: string
                        example: Eliminado correctamente
                        description: Mensaje del detalle de la operacion.
        '400':
          description: Error en la solicitud del cliente (folio inválido).
          content:
            application/json:
              schema:
                type: object
                properties:
                  codigo:
                    type: string
                    example: 400.meli-developer-productos.4004
                    description: Código de error.
                  mensaje:
                    type: string
                    example: Falta campo obligatorio
                    description: Descripción del error.
                  folio:
                    type: string
                    example: 1234sdvd
                    description: Folio de la transacción .
                  info:
                    type: string
                    example: https://meli.com.mx/info#400.meli-developer-productos.4004
                    description: Enlace a información adicional sobre el error.
                  detalle:
                    type: string
                    example: Falta el campo idCliente
                    description: Detalle específico del error 
        '404':
          description: No se encontró pago con el folio proporcionado.
          content:
